<div id="friends">
  <h2 class="text-center">Friends List</h2>
  <% if @friends.any? %>
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Phone no</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone_no %></td>

            <td><%= link_to 'Show', friend %></td>
            <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
            <td><%= link_to 'Destroy', friend,  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this friend?"
                  } %></td>
          </tr>
        <% end %>
      </tbody>  
    </table>
  <% else %>
    <p>No friends found.</p>
  <% end %>
  <br>
  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
</div>

